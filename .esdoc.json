{
  "source": "./src",
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {"enable": true},
        "coverage": {"enable": true},
        "accessor": {"access": ["public", "protected", "private"], "autoPrivate": true},
        "undocumentIdentifier": {"enable": true},
        "unexportedIdentifier": {"enable": false},
        "typeInference": {"enable": true},
        "brand": {
          "logo": "./assets/ongetlogo.png",
          "title": "onGet",
          "description": "The KISS, write-less do more, elegant, plugin-extensible way to handle state with diverse origins.",
          "repository": "https://github.com/hacknlove/onGet",
          "author": "Antonio Fernández-Porrúa"
        },
        "test": {
          "source": [
            "./src/lib/__tests__",
            "./src/private/__tests__",
            "./src/plugins/__tests__"
          ],
          "interfaces": ["describe", "it", "context", "suite", "test"],
          "includes": ["(spec|Spec|test|Test)\\.js$"],
          "excludes": ["\\.config\\.js$"]
        }
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {
        "all": true
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "stripPackageName": false,
        "replaces": [
          {"from": ".*", "to": ""}
        ]
      }
    }
  ]

}
