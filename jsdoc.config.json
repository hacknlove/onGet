{
	"plugins": ["plugins/markdown"],
	"source": {
		"include": [ "./src" ],
		"includePattern": ".+\\.js(doc|x)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"opts": {
		"template": "../../jsdoc-template",
		"destination": "./docs/",
		"recurse": true,
		"readme": ".doc.md",
		"tutorials": "./tutorials",
		"verbose": true
	},
	"tags": {
		"allowUnknownTags" : true
	},
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false,
		"referenceTitle": "onGet",
		"disableSort": false,
		"collapse": true,
		"resources": {
				"github": "https://github.com/hacknlove/onGet"
		}
	},
	"markdown": {
		"parser": "gfm",
		"hardwrap": true,
		"tags": ["examples", "description"]
	}
}
